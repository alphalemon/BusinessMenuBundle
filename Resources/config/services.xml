<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="app_businessmenu.block.class">AlphaLemon\Block\BusinessMenuBundle\Core\Block\AlBlockManagerBusinessMenu</parameter>

        <parameter key="businessmenu_editor_settings" type="collection">
            <parameter key="rich_editor">true</parameter>
        </parameter>

        <parameter key="businessmenu.external_stylesheets" type="collection">
            <parameter>@BusinessMenuBundle/Resources/public/css/business-menu.css</parameter>
        </parameter>

        <parameter key="businessmenu.external_javascripts" type="collection">
            <parameter>@BusinessMenuBundle/Resources/public/js/cufon-yui.js</parameter>
            <parameter>@BusinessMenuBundle/Resources/public/js/al-cufon-replace.js</parameter>
            <parameter>@BusinessMenuBundle/Resources/public/js/Swis721_Cn_BT_400.font.js</parameter>
            <parameter>@BusinessMenuBundle/Resources/public/js/Swis721_Cn_BT_700.font.js</parameter>
        </parameter>
    </parameters>

    <services>
        <service id="app_businessmenu.block" class="%app_businessmenu.block.class%">
            <argument type="service" id="service_container" />
            <tag name="alphalemon_cms.blocks_factory.block" description="Business menu"  type="BusinessMenu" group="business_theme_apps" />
        </service>
    </services>
</container>